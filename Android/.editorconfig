root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 120

[*.{kt,kts}]
ktlint_code_style = ktlint_official
ij_kotlin_allow_trailing_comma = true
ij_kotlin_allow_trailing_comma_on_call_site = true
ij_kotlin_imports_layout = *,java.**,javax.**,kotlin.**,^toaru
ij_kotlin_line_comment_add_space = true
ij_kotlin_name_count_to_use_star_import = 999
ktlint_function_naming_ignore_when_annotated_with = Composable,Preview
ij_kotlin_packages_to_use_import_on_demand = java.util,kotlin.collections,kotlinx.coroutines.flow,androidx.compose.foundation.layout,androidx.compose.material3,androidx.compose.runtime
